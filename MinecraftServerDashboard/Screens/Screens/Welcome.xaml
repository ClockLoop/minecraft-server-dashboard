<metro:Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:metro="http://schemas.codeplex.com/elysium"
    xmlns:params="http://schemas.codeplex.com/elysium/params"
    xmlns:local="clr-namespace:MinecraftServerDashboard"
    x:Class="Welcome"
    Title="Welcome"
    params:Manager.Theme="Light"
    ShowInTaskbar="False"
    ResizeMode="NoResize"
    Height="350" Width="600">
    <Grid>
        <Border Background="#FFFFF7C2" Height="80" HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="2">
            <Label HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22">
                <TextBlock >Set up your basic server settings before continuing.
                </TextBlock>
            </Label>
        </Border>
        <TextBlock Text="Welcome to Minecraft Server Dashboard!" HorizontalAlignment="Left" Margin="10,29,0,0" VerticalAlignment="Top" FontSize="20" />
        <Image HorizontalAlignment="Right" Height="100" Margin="0,10,10,0" VerticalAlignment="Top" Width="100" Source="/MinecraftServerDashboard;component/appicon.ico" />
        <Button Content="Next" HorizontalAlignment="Right" Margin="0,0,22,24" VerticalAlignment="Bottom" Width="125" Height="50" FontSize="18" Click="Button_Click" IsDefault="True" />
    </Grid>
</metro:Window>